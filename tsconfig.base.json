{
  "compilerOptions": {
    // allowJs causes some bugs using ts-loader, if we decide to use that in the future
    // "allowJs": true,
    "checkJs": false,
    // composite is just not worth it. the savings come from persisting files (.d + maps) and it's buggy as heck
    // "composite": true,
    "target": "es2019",
    "module": "esnext",
    "jsx": "react-jsx",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "bundler",
    "pretty": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noErrorTruncation": true
  },
  "exclude": ["node_modules", "dist", "dev", "build"]
}
